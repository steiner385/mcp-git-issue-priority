{
  "name": "mcp-git-issue-priority",
  "version": "1.0.0",
  "description": "MCP server for GitHub issue prioritization and workflow management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-git-issue-priority": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "format": "prettier --write src tests",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "github",
    "issue-tracking",
    "prioritization",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@octokit/plugin-retry": "^7.0.0",
    "@octokit/plugin-throttling": "^9.0.0",
    "@octokit/rest": "^21.0.0",
    "hono": "^4.11.7",
    "proper-lockfile": "^4.1.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
